<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".MainActivity">

    <!-- EditText para el nombre -->

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="50dp"/>

    <!-- Botón Saludar -->
    <Button
        android:id="@+id/buttonSaludar"
        android:layout_width="138dp"
        android:layout_height="111dp"
        android:text="@string/button_greet"
        app:layout_constraintTop_toBottomOf="@id/editTextNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonContar"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="50dp"/>

    <!-- Botón Contar letras -->
    <Button
        android:id="@+id/buttonContar"
        android:layout_width="138dp"
        android:layout_height="111dp"
        android:text="@string/button_count"
        app:layout_constraintTop_toBottomOf="@id/editTextNombre"
        app:layout_constraintStart_toEndOf="@id/buttonSaludar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <!-- TextView para mostrar resultados -->
    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aquí aparecerá el resultado"
        android:textSize="18sp"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/buttonSaludar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/botonFecha"
        android:layout_width="194dp"
        android:layout_height="71dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="204dp"
        android:text="enseñar fecha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonHora"
        android:layout_width="191dp"
        android:layout_height="44dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="136dp"
        android:text="Enseñar hora"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="148dp"
        android:layout_height="76dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="48dp"
        android:text="enseñar numero y moneda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>